extends ../layout/index

block contenido
    h2.mt-5.text-2xl For 
        span.font-extrabold #{type}
    .py-10 
        h2.text-center.text-4xl.font-extrabold.text-green-500= pagina
        include ../partials/_errors
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="/students/signup" method="POST" id="signup-form").space-y-5
                    
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="fullname") Your Name
                        input#fullName.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Write your name" type="text" name="fullName" value=fullName || "") 
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") SignUp Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Write your email" type="email" name="email" value=email || "") 
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="education") Your Education
                        input#education.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Wtite your University" type="text" name="education" value=education || "") 
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="cv") Your Resume (Optional)
                        input#cv.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( type="file" name="cv" value=cv|| "")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="link") Link (Optional) 
                        input#link.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ex. GitHub, LinkedIn" type="text" name="link" value=link||"")              
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="profileImage") Profile Image (Optional)
                        input#profileImage.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400( type="file" name="profileImage" )
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password" ) Your Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Write your Password" type="password" name="password")
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="repetir-password") Repeat Password
                        input#repeat-password.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Repeat your Password" type="password" ) 
                    .flex.items-center.justify-between 
                        
                        a.text-gray-500.text-xs(href=`/${type}/login`) Already have an account? SignIn
                        a.text-gray-500.text-xs(href=`/${type}/forgot-password`) Forgotten Password?
                       
                    input(type="submit" value="SignUp" class="w-full bg-green-500 text-white uppercase hover:bg-green-700 font-bold py-3 cursor-pointer rounded-md")

                    script(src='/js/script.js')
