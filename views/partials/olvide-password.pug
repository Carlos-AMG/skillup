extends ../layout/index

block contenido
    h2.mt-5.text-2xl For 
        span.font-extrabold #{type}
    .py-10 
        h2.text-center.text-2xl.font-extrabold.text-green-500= pagina

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form(action="").space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Registration Email
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Write your email" type="email" name="email") 

                    .flex.items-center.justify-between
                        if type==="Students"
                            a.text-gray-500.text-xs(href="/student/login")  Already have an account? SignIn
                            a.text-gray-500.text-xs(href="/student/signup") New to SkillUp? SignUp
                        else 
                            a.text-gray-500.text-xs(href="/company/login")  Already have an account? SignIn
                            a.text-gray-500.text-xs(href="/company/signup") New to SkillUp? SignUp

                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-green-500 text-white uppercase hover:bg-green-700 font-bold py-3 cursor-pointer rounded-md")