doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title SkillUp Admin
    link(rel="stylesheet", href="/css/app.css")
    link(rel="stylesheet", href="/css/styles.css")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")

  body.min-h-screen.bg-gray-50
    main(class="mx-auto container mt-10 px-2")
      include ../partials/logo
      br
      block contenido
        .mb-5
          h1.text-center.text-4xl.font-bold Admin Dashboard
        .container.pt-2
          //- Section 1: Filters
          div#filter-section(class="mb-2 pt-2 w-full flex justify-center space-x-8")
            select#filter-company-student(class="py-2 px-2 rounded-lg border-4 border-green-500")
              option(value="company") Companies
              option(value="student") Students

          script(src="/js/admin/dashboardAdmin-script.js")

          div.bg-blue  
              ul#companies-list
                  each company in companies
                      li(id=`company-${company.id}`)
                          div.rect(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400") 
                              p.text-2xl.font-bold Name: 
                                span.font-normal #{company.name}
                              p.text-2xl.font-bold RFC: 
                                span.font-normal #{company.rfc}
                              div(class="mx-5")
                                button.bg-green-500.text-white.py-2.px-4.rounded-md(type="button" class="verify" data-company-id=company.id) Verify
                                button.bg-red-500.text-black.py-2.px-4.rounded-md(type="button" class="decline" data-company-id=company.id) Decline
              ul#students-list
                  each student in students
                      li
                        div.rect(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 ")
                          p.text-2xl.font-bold Name:
                            span.font-nomral #{student.fullName}
                          p.text-2xl.font-bold Email: 
                            span.font-normal #{student.email}
                        

                          

