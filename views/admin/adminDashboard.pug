doctype html
html(lang="es")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title SkillUp Admin
    link(rel="stylesheet", href="/css/app.css")
    link(rel="stylesheet", href="/css/styles.css")
    script(src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js")

  body.min-h-screen.bg-gray-50
    main(class="mx-auto container mt-10 px-2")
      include ../partials/logo
      br
      block contenido
        .mb-5
          h1.text-center.text-4xl.font-bold.mb-5 Admin Dashboard
          include ../partials/_success
        div(class="md:w-1/2   mx-auto").container.pt-2
          //- Section 1: Filters
          div#filter-section(class="mb-2 pt-2 w-full flex justify-center space-x-8")
            select#filter-company-student(class="py-2 px-2 rounded-lg border-4 border-green-500")
              option(value="company") Companies
              option(value="student") Students

          script(src="/js/admin/dashboardAdmin-script.js")

          div.bg-blue  
              ul#companies-list
                  each company in companies
                      li(id=`company-${company.id}`)
                          div.rect(class=" w-full px-3 py-2 border-4 border-green-500 rounded-md placeholder-gray-400 mb-3") 
                              p.text-2xl.font-bold Name: 
                                span.font-normal #{company.name} 
                              p.text-2xl.font-bold RFC: 
                                span.font-normal #{company.rfc}
                              div(class="mt-3 mb-3 mx-5 flex justify-evenly")
                                form(action=`/admin/verify/${company.id}` method="POST") 
                                  input.bg-blue-500.text-white.py-2.px-4.rounded-md.font-bold(type="submit" class="verify" data-company-id=company.id value="Verify" class="hover:bg-blue-700")
                                form(action=`/admin/decline/${company.id}` method="POST") 
                                  input.bg-red-500.text-white.py-2.px-4.rounded-md.font-bold.pointer(type="submit" class="decline" data-company-id=company.id value="Decline" class="hover:bg-red-700")
              ul#students-list
                  each student in students
                      li
                        div.rect(class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 ")
                          p.text-2xl.font-bold Name:
                            span.font-nomral #{student.fullName}
                          p.text-2xl.font-bold Email: 
                            span.font-normal #{student.email}
                        

                          

