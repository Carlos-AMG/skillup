doctype html
html(lang="es")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title SkillUp Admin
        link(rel="stylesheet", href="/css/app.css")
        link(rel="stylesheet", href="/css/styles.css")
        
    body.min-h-screen.bg-gray-50
        main(class="mx-auto container mt-10 px-2")
            include ../partials/logo    
            block contenido
                .mb-3.pb-3
                    h1.text-center.text-4xl.font-bold Dash 
                    span.font-normal Board
                .container.pt-2
                    //- Section 1: Filters
                    div#filter-section(class="mb-2 pt-2 w-full flex justify-center space-x-8")
                    select#filter-company-student(class="py-2 px-2 rounded-lg border-4 border-green-500")
                        option(value="company") Companies
                        option(value="student") Students
                    if value === "company"
                        ul
                        each company in companies
                            li(value=company.id)= company.name

                    div(class="grid gap-4 grid-cols-3 mt-5 pt-10")
                    #offers-section(style="overflow-y: scroll; height: 500px;" class="flex flex-col flex-nowrap justify-between items-stretch overflow-x-auto col-span-1")
                    .description-section(class="col-span-2")
                        h2(class="text-4xl font-bold text-center")
