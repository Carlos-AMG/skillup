extends ../layout/indexInCompanies
block contenido

    .mb-5
        h1.text-center.text-4xl.font-bold Edit Job 
            span.font-normal Offer

    if errors.length > 0
      div(class="max-w-md mx-auto my-10" id="alert")
          each error in errors
              p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold rounded-lg")= error.msg
              
    div#jobForm.mt-8.mx-auto.max-w-md
        .bg-white.py-8.px-4.shadow
            h2(class="text-center text-2xl font-extrabold text-sky-900 mt-2 mb-2") Job Form
            .mt-0.mx-auto.max-w-md 
            .bg-white.py-8.px-4.shadow
                form(action=`/companies/update-job/${formData.id}` method="POST" class="text-black")

                    div
                        label(for="title" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Tittle:
                        input(type="text" name="title" id="title"  placeholder="Tittle" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400 text-black" value=formData ? formData.title: '')
                
                    div.pt-5
                        label(for="description" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Description:
                        textarea(name="description" id="description"  placeholder="Description" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value= formData.description)= formData.description
                        
                    div.pt-5
                        label(for="jobType" class="block text-x uppercase text-gray-500 mb-2 font-bold" ) Job Type:
                        select#jobType(name="jobType" class="w-full px-3 py-2 border border-gray-300 rounded-md font-normal " selected=formData.jobType)
                            option(value="fullTime" selected=(formData.jobType === "fullTime")) Full-Time
                            option(value="halfTime" selected=(formData.jobType === "halfTime")) Half-Time
                            option(value="internship" selected=(formData.jobType === "internship")) Internship
                    div.pt-5
                        label(for="skills" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Skills:
                        input(type="text" name="skills" id="skills" placeholder="Skills"  class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value=formData.skills)
                        
                    div.pt-5
                        label(for="modality" class="block text-x uppercase text-gray-500 mb-2 font-bold") Modality:
                        select#modality(name="modality" class="w-full px-3 py-2 border border-gray-300 rounded-md font-normal" selected=formData.modality)
                            option(value="presential" selected=(formData.modality === "presential")) Presential
                            option(value="virtual" selected=(formData.modality === "virtual")) Virtual
                            option(value="hybrid" selected=(formData.modality === "hybrid")) Hybrid
                        
                    div.pt-5
                        label(for="salary" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Salary:
                        input(type="number" placeholder="Salary" name="salary" id="salary"  class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value=formData.salary)
                        
                    div.pt-5
                        label(for="hoursPerWeek" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Hours per week:
                        input(type="number" placeholder="Hours per week" name="hoursPerWeek" id="hoursPerWeek"  class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" value=formData.hoursPerWeek)
                        
                    div.pt-5
                        label(for="areaId"  class="block text-sm uppercase text-gray-500 mb-2 font-bold") Area:
                        select(name="areaId" id="areaId"  class="w-full px-3 py-2 border border-gray-300 rounded-md" )
                            each area in areas
                                option(value=area.id selected=(formData.areaId === area.id))= area.name
                        
                    div.pt-5
                        input(type="submit" value="Update Job" class="w-full bg-sky-900 text-white uppercase hover:bg-sky-950 font-bold py-3 cursor-pointer rounded-md ") 
